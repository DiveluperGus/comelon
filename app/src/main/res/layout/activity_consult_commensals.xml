<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.manage.commensal.consult.ConsultCommensalsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="@dimen/activity_normal_margin"
        android:paddingTop="@dimen/activity_normal_margin"
        android:paddingEnd="@dimen/activity_normal_margin"
        android:paddingBottom="@dimen/activity_normal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txt_msg_commensals_did_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Title3.Regular"
            android:text="Listado de los comensales que solicitaron la comida"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_msg_name_meal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Title3.Bold"
            android:text="Pollo en salsa verde"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_msg_commensals_did_request"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/msg_choice_commensal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Title3.Regular"
            android:text="Selecciona un comensal para modificar su estatus"
            android:layout_marginTop="@dimen/activity_middle_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_msg_name_meal"/>

        <TextView
            android:id="@+id/msg_status_commensal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title4.Bold"
            android:text="Estatus del comensal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"/>

        <ImageView
            android:id="@+id/imgview_status_green"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/greenNormal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/msg_status_commensal"/>

        <TextView
            android:id="@+id/msg_payed_and_deliveried"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Title4.Bold"
            android:text="Pagó y se le entrego la comida"
            android:layout_marginStart="@dimen/activity_middle_margin"
            app:layout_constraintStart_toEndOf="@+id/imgview_status_green"
            app:layout_constraintTop_toTopOf="@id/imgview_status_green"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imgview_status_yellow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/yellowNormal"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgview_status_green"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Title4.Bold"
            android:text="Pagó pero no se le ha entregado la commida"
            android:layout_marginStart="@dimen/activity_middle_margin"
            app:layout_constraintStart_toEndOf="@+id/imgview_status_yellow"
            app:layout_constraintTop_toTopOf="@+id/imgview_status_yellow"/>

        <ImageView
            android:id="@+id/imgview_status_brown"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/brownNormal"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgview_status_yellow"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Title4.Bold"
            android:text="No ha pagado y ya se le entregó la comida"
            android:layout_marginStart="@dimen/activity_middle_margin"
            app:layout_constraintStart_toEndOf="@id/imgview_status_brown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgview_status_brown"/>

        <ImageView
            android:id="@+id/imgview_status_red"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/redNormal"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgview_status_brown" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Title4.Bold"
            android:text="No ha pagado ni se le ha entregado la comida"
            android:layout_marginStart="@dimen/activity_middle_margin"
            app:layout_constraintStart_toEndOf="@id/imgview_status_red"
            app:layout_constraintTop_toTopOf="@id/imgview_status_red"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_status_commensal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/activity_middle_margin"
            android:layout_marginBottom="@dimen/activity_middle_margin"
            tools:itemCount="5"
            tools:listitem="@layout/cardview_satus_commensal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/msg_choice_commensal"
            app:layout_constraintBottom_toBottomOf="@+id/guideline"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".8"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>