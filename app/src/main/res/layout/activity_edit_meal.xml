<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".ui.manage.meal.edit.EditMealActivity">

    <ScrollView
        android:id="@+id/scrollview_create_meal_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_create_meal_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundLight"
            android:paddingStart="@dimen/activity_normal_margin"
            android:paddingEnd="@dimen/activity_normal_margin"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_deadline"
                style="@style/Title3.Bold"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:text="Fecha"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/msg_choice_date_hour_limit" />

            <Button
                android:id="@+id/btn_hour_limit"
                style="@style/Title3.Bold"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:text="Hora"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_deadline" />

            <EditText
                android:id="@+id/edtxt_name_meal"
                style="@style/Title3.Regular"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:hint="Nombre comida"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtxt_name_stew"
                style="@style/Title3.Regular"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:hint="Nombre guisado"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtxt_name_meal" />

            <EditText
                android:id="@+id/edtxt_description"
                style="@style/Title3.Regular"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Descripción"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtxt_name_stew" />

            <EditText
                android:id="@+id/edtxt_number_persons"
                style="@style/Title3.Regular"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:inputType="number"
                android:maxLength="2"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtxt_description" />

            <EditText
                android:id="@+id/edtxt_cost_meal"
                style="@style/Title3.Regular"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtxt_number_persons" />

            <TextView
                android:id="@+id/msg_number_persons"
                style="@style/Title3.Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:text="Número de personas necesarias"
                app:layout_constraintBottom_toBottomOf="@+id/edtxt_number_persons"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/edtxt_description" />

            <TextView
                android:id="@+id/msg_cost_meal"
                style="@style/Title3.Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:text="Costo de la comida"
                app:layout_constraintBottom_toBottomOf="@id/edtxt_cost_meal"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/edtxt_number_persons" />

            <TextView
                android:id="@+id/msg_choice_date_hour_limit"
                style="@style/Title3.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:text="Selecciona fecha y hora para solicitar la comida"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtxt_cost_meal" />

            <TextView
                android:id="@+id/txt_deadline"
                style="@style/Title3.Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_normal_margin"
                app:layout_constraintBottom_toBottomOf="@id/btn_deadline"
                app:layout_constraintStart_toEndOf="@id/btn_deadline"
                app:layout_constraintTop_toTopOf="@+id/btn_deadline" />

            <TextView
                android:id="@+id/txt_hour_limit"
                style="@style/Title3.Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_normal_margin"
                app:layout_constraintBottom_toBottomOf="@id/btn_hour_limit"
                app:layout_constraintStart_toEndOf="@id/btn_hour_limit"
                app:layout_constraintTop_toTopOf="@+id/btn_hour_limit" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_create_meal"
                style="@style/Title2.Bold"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/activity_high_margin"
                android:layout_marginEnd="@dimen/activity_normal_margin"
                android:backgroundTint="@color/blueNormal"
                android:text="Cancelar"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_hour_limit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accept_create_meal"
                style="@style/Title2.Bold"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/activity_normal_margin"
                android:text="Aceptar"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/btn_cancel_create_meal" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbarBackground"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:contentInsetStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/toolbar_arrow_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_left"
                android:tint="@color/whiteNormal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/Title2.Bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Texto"
                android:textColor="@color/whiteNormal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>