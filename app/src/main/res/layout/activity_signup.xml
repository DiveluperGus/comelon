<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    android:paddingStart="@dimen/activity_normal_margin"
    android:paddingEnd="@dimen/activity_normal_margin"
    tools:context=".ui.signup.SignupActivity">

    <ProgressBar
        android:id="@+id/progressbarSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".8"/>

    <TextView
        style="@style/Title1.Bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="REGISTRAR USUARIO"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/activity_high_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_person_name"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_person"
            android:tint="@color/txtDisabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edtxt_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/Title2.Regular"
            android:hint="Nombre*"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@+id/ic_person_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_lastName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/activity_normal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_name"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_person_lastName"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_person"
            android:tint="@color/txtDisabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edtxt_lastName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/Title2.Regular"
            android:hint="Apellido materno*"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@+id/ic_person_lastName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/activity_normal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_lastName"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_person_email"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_mail"
            android:tint="@color/txtDisabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edtxt_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/Title2.Regular"
            android:hint="Correo electrónico*"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@+id/ic_person_email"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_error_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Title4.Regular"
        android:textColor="@color/errorDarker"
        android:text="Correo electrónico no válido"
        android:visibility="gone"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_email"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_phoneNumber"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/activity_normal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_email"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_person_phone"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_phone"
            android:tint="@color/txtDisabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edtxt_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/Title2.Regular"
            android:hint="Número de teléfono"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="10"
            app:layout_constraintStart_toEndOf="@+id/ic_person_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_normal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_phoneNumber"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_person_password"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_password"
            android:tint="@color/txtDisabled"
            android:foregroundGravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:passwordToggleEnabled="true"
            android:padding="0dp"
            android:background="@color/backgroundLight"
            app:layout_constraintStart_toEndOf="@+id/ic_person_password"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtxt_password_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Title2.Regular"
                android:hint="Contraseña"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_fields_required"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Title4.Regular"
        android:textColor="@color/errorDarker"
        android:text="Los campos con * son obligatorios"
        android:visibility="gone"
        android:layout_marginTop="@dimen/activity_high_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_password"/>

    <TextView
        android:id="@+id/txt_error_passw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Title4.Regular"
        android:textColor="@color/errorDarker"
        android:text="La contraseña debe tener entre 8 y 15 carácteres. Acepta mayúsculas, minúsculas y números."
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_password"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup"
        android:layout_width="0dp"
        android:layout_height="48dp"
        style="@style/Title2.Bold"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:backgroundTint="@color/blueNormal"
        android:layout_marginBottom="@dimen/activity_xhigh_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".1" />


</androidx.constraintlayout.widget.ConstraintLayout>